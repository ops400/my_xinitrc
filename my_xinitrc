nitrogen --restore &
picom --experimental-backends &
setxkbmap br &

per(){
  per="$(mpstat | awk '$12 ~ /[0-9.]+/ { print 100 - $12"%" }')"
  echo -e " $per"
}

dta(){
  dta="$(date +"%d-%m-%y %I:%M")"
  echo -e " $dta"
}

pak(){
  pak="$(pacman -Q | wc -l)"
  echo -e " $pak"
}

puk(){
  puk="$(checkupdates  | wc -l)"
  echo -e " $puk"
}

ker(){
  ker="$(uname -r)"
  echo -e " $ker"
}

while true; do
	xsetroot -name "$(puk) | $(pak) | $(per) | $(dta)"
	sleep 20s
done &

exec dwm
